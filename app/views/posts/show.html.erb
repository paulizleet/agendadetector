<section id="main">
  <div class="post-data">
    <%= @posts[0].text.html_safe %>
  </div>
  <div class="post-table">
    <div class="table-row">
      <% @posts.each do |post| %>
      <div class="table-cell">
        <% link = "http://boards.4chan.org/#{post.board}/thread/#{post.op}#p#{post.post_num}"%>
        <a href="<%=link%>"> <%= link %> </a>
      </div>
      <div class="table-cell">
        <%= DateTime.strptime(post.post_timestamp, "%s") %>
      </div>

      <%end%>
    </div>
  </div>

</section>
