<section id="main">
  <div id="post-data">
    <%= @posts.nil? ? @archived[0].text.html_safe : @posts[0].text.html_safe %>
  </div>
  <table class="table">


    <tr>
      <th>OP</th>
      <th>Post Text</th>
      <th>Link</th>
      <th>Time Posted</th>
    </tr>
    <% if !@posts.nil? %>
      <% @posts.each do |post| %>
      <% thread_op = ChanThread.find(post.chan_thread_id).op %>

        <tr>
          <td>

            <%= thread_op %>
          </td>
          <td>
            <%= post.text.html_safe %>
          </td>
          <td>
            <% link = "http://boards.4chan.org/#{@board.board_id}/thread/#{thread_op}#p#{post.post_num}"%>
            <a href="<%=link%>"> <%= "Link" %> </a>
          </td>
          <td>
            <%= DateTime.strptime(post.post_timestamp, "%s") %>
          </td>
        </tr>
      <%end%>
    <%end%>
    <%if !@archived.nil? %>

      <% @archived.each do |post|  %>
      <tr>
        <td>
          <%= post.op %>
        </td>
        <td>
          <%= post.text.html_safe %>
        </td>
        <td>
          ---
        </td>
        <td>
          <%= DateTime.strptime(post.post_timestamp, "%s") %>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>

</section>
